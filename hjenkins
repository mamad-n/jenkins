stage('Build') {
    node {
        checkout scm
        sh 'echo from build'
    }
}

stage('Test') {
    node('linux') {
        checkout scm
        try {
            sh 'echo from linux  check'
        }
        finally {
            sh 'echo end of finally'
        }
    }
    node('windows') {
        checkout scm
        try {
            bat 'echo from windows check'
        }
        finally {
            sh 'echo end of finally'
            
        }
    }
}