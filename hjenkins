stage('Build') {
    node {
        checkout scm
        sh 'echo from build'
        stash includes: '**/target/*.jar', name: 'app'
    }
}

stage('Test') {
    node('linux') {
        checkout scm
        try {
            unstash 'app'
            sh 'echo from linux  check'
        }
        finally {
            junit '**/target/*.xml'
        }
    }
    node('windows') {
        checkout scm
        try {
            unstash 'app'
            bat 'echo from windows check'
        }
        finally {
            junit '**/target/*.xml'
        }
    }
}