pipeline{
    agent any
    stages {
        stage ('test') {
            steps {
                echo "hello from stage test station"
                sh "echo salam az test stage > file1"
            }
        }
        stage ('build') {
            steps {
                echo "hello from stage build station"
                sh "cat file1"
            }
        }
        stage ('deploy') {
            steps {
                echo "hello from stage deploy station"
                sh "cat file1"
            }
        }
    }

}