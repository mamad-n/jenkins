node {

  // config 

  // job
  try {
    stage('build') {
      println('so far so good...')
    }
    stage('test') {
      println('A test has failed!')
      sh 'exit 1'
    }
  } catch(e) {

    // send slack message
    slackSend color: "good", message: "Message from Jenkins Pipeline -- in az tarafe mane"

    // mark current build as a failure and throw the error
    throw e
  }
}