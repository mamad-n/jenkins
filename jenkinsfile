node {

  // config 

  // job
  try {
    stage('build') {
      println('so far so good...')
    }
    stage('test') {
      println('A test has failed!')
      sh 'exit 1'
    }
  } catch(e) {

    // send email
      emailext(body: content,
         subject: 'my subject',
         to: 'atombax@gmail.com', attachLog: true )

    // mark current build as a failure and throw the error
    throw e;
  }
}